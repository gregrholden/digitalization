    div.row.text-center.projects.ml-auto.mr-auto
      div.flip-container(ontouchstart='this.classList.toggle("hover");')
        div.flipper
          div.front
            p.img-thumbnail: img(src='assets/images/bigdata.jpg' alt='Big Data Icon')
